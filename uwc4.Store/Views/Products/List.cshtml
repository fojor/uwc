@model uwc4.Store.Models.ProductsListModel

@{
	ViewBag.Title = Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    <div class="span3">
        @{
		Html.RenderAction("Filter");
        }   
    </div>
    <div class="span9 products-list">
        @{
		int i = 0;
		foreach (var item in Model.Items)
		{
			if (i == 0 || i % 3 == 0)
			{
            		@:<div class="row-fluid">
                	}
                	<div class="span4">
                    	@{
				Html.RenderPartial("Product", item);
		    	}
                	</div>
		   	if ((i + 1) % 3 == 0)
		   	{
                	@:</div>
                    	}
			i++;
		}
        }
    </div>
</div>
